<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_opciones"
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_three_dots_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/et_nombre_ingrediente"
        app:layout_constraintStart_toEndOf="@+id/et_nombre_ingrediente"
        app:layout_constraintTop_toTopOf="@+id/et_nombre_ingrediente" />

    <TextView
        android:id="@+id/et_cantidad_ingrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="43dp" />

    <TextView
        android:id="@+id/et_nombre_ingrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/et_cantidad_ingrediente"
        app:layout_constraintStart_toEndOf="@+id/et_cantidad_ingrediente"
        app:layout_constraintTop_toTopOf="@+id/et_cantidad_ingrediente" />

</androidx.constraintlayout.widget.ConstraintLayout>