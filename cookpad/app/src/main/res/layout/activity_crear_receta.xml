<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Sección DESCRIPCIÓN (título, comensales, tiempo, foto)-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="20dp"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="false"
        android:layout_marginBottom="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="743dp"
            android:orientation="vertical"
            tools:context=".CrearReceta">

            <EditText
                android:id="@+id/et_titulo_receta"
                android:layout_width="320dp"
                android:layout_height="54dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/formulario_receta_titulo"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@+id/et_descripcion_receta"
                app:layout_constraintEnd_toEndOf="@+id/et_descripcion_receta"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et_descripcion_receta"
                app:layout_constraintTop_toBottomOf="@+id/img_receta"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/et_descripcion_receta"
                android:layout_width="320dp"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/formulario_receta_descripcion"
                android:inputType="textPersonName"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@+id/et_procedencia_receta"
                app:layout_constraintEnd_toEndOf="@+id/et_procedencia_receta"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et_procedencia_receta" />

            <EditText
                android:id="@+id/et_tiempo_receta"
                android:layout_width="151dp"
                android:layout_height="54dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/formulario_receta_tiempo_decrp"
                android:inputType="textPersonName"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tiempo_rreceta"
                app:layout_constraintStart_toEndOf="@+id/tv_tiempo_rreceta"
                app:layout_constraintTop_toTopOf="@+id/tv_tiempo_rreceta"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_comenales_receta"
                android:layout_width="111dp"
                android:layout_height="20dp"
                android:layout_marginBottom="32dp"
                android:text="@string/formulario_receta_comensales_str"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_tiempo_rreceta"
                app:layout_constraintStart_toStartOf="@+id/tv_tiempo_rreceta" />

            <TextView
                android:id="@+id/tv_tiempo_rreceta"
                android:layout_width="153dp"
                android:layout_height="41dp"
                android:text="@string/formulario_receta_tiempo_str"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.131"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.901" />

            <EditText
                android:id="@+id/et_procedencia_receta"
                android:layout_width="320dp"
                android:layout_height="91dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/formulario_receta_procedencia"
                android:inputType="textPersonName"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_comenales_receta"
                app:layout_constraintEnd_toEndOf="@+id/ed_comensales_receta"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/tv_comenales_receta" />

            <ImageView
                android:id="@+id/img_receta"
                android:layout_width="374dp"
                android:layout_height="154dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/fondo_plato_comida"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.432"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!-- android:background="@drawable/custom_input"-->
            <EditText
                android:id="@+id/ed_comensales_receta"
                android:layout_width="151dp"
                android:layout_height="54dp"
                android:layout_marginStart="56dp"

                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/formulario_receta_comensales_descrp"
                android:inputType="textPersonName"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_comenales_receta"
                app:layout_constraintEnd_toEndOf="@+id/et_tiempo_receta"
                app:layout_constraintStart_toEndOf="@+id/tv_comenales_receta"
                app:layout_constraintTop_toTopOf="@+id/tv_comenales_receta"
                app:layout_constraintVertical_bias="0.529" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

        <!--Sección INGREDIENTE-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_ingrediente"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="20dp"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="false"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"
                android:padding="15dp"
                android:id="@+id/tv_ingredientes"
                android:layout_width="153dp"
                android:layout_height="54dp"
                android:text="@string/str_ingrediente"
                android:textColor="@color/colorTituloReceta"
                android:textStyle="bold"
                android:textSize="18dp" />
            <!--caja de texto 1 y opción mini menu-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_ingrediente"
                    android:layout_width="300dp"
                    android:layout_height="54dp"
                    android:layout_below="@id/tv_ingredientes"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    android:hint="@string/formulario_receta_ingrediente_dscr"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                 />
                <ImageView
                    android:id="@+id/img_three_dots_menu_secc_ingr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_three_dots_vertical"
                     />
            </LinearLayout>
            <!--caja de texto 2 y opción mini menu-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_ingrediente_2"
                    android:layout_width="300dp"
                    android:layout_height="54dp"
                    android:layout_below="@id/tv_ingredientes"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    android:hint="@string/formulario_receta_ingrediente_dscr"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    />
                <ImageView
                    android:id="@+id/img_three_dots_menu2_secc_ingr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_three_dots_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <!-- Sección PASOS-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_pasos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="20dp"
            app:cardCornerRadius="2dp"
            app:cardPreventCornerOverlap="false"
            android:layout_marginBottom="5dp"
            >
            <!--el más grande (contiene a todos)-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pasos"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="0dp"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_pasos"
                    android:textColor="@color/colorTituloReceta"
                    android:textStyle="bold"
                    android:textSize="18dp" />

                <!--para el (menú 4 rayas + número), descripción, menú 3 pts-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <!--número y menú de 4 rayas-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="0dp"
                            android:padding="6dp"
                            android:id="@+id/tv_numero_paso"
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:background="@drawable/custom_cicle_number"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/stripe_menu"
                            android:layout_below="@+id/tv_numero_paso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="0dp"
                            android:adjustViewBounds="true"
                            android:padding="0dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_striped_patterns" />
                    </LinearLayout>
                    <!--descripción paso + imagen-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_descripcion_paso"
                            android:layout_width="252dp"
                            android:layout_height="77dp"
                            android:background="@drawable/custom_input"
                            android:ems="10"
                            android:hint="@string/formulario_receta_paso_decrp"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:layout_marginLeft="15dp"

                            />
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/img_paso"
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            app:shapeAppearanceOverlay="@style/roundimageview"
                            android:src="@drawable/camara_fondo_gris" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_three_dots_menu_secc_pasos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_three_dots_vertical"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>